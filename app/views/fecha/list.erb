<h1>Fixture</h1>

<table class="table table-bordered" style="width: 65%" border="1">
	<% @fechas.each do | fecha | %>
	<tr>
		<th>Fecha: <% fecha.numero %></th>	
	</tr>
<% partidos = Partido.find_by_fecha(fecha) %>
	<tr>
		<% partidos.each do | partido | %>
				<tr>
					<td>
						<%  eq = Equipo.get(partido.equipo1_id)%> 
					    <%= eq.nombre_equipo %>
					</td>
					<td>
						<%= partido.resultado1 %>
					</td>
					<td>
						<%= partido.resultado2 %>
					</td>
					<td style="width: 245px">
					    <%  eq1 = Equipo.get(partido.equipo2_id)%> 
					    <%= eq1.nombre_equipo %>
					</td>
				</tr>
		<% end %>
	</tr>

  <% end %>

</table>
