<h1>Torneos</h1>

<table class="table table-bordered">
	<tr>
		<th style="text-align:center">Nombre</th>
		<th style="text-align:center">Cantidad de equipos</th>
		<th style="text-align:center">Sistema de puntuacion</th>
	    <th style="text-align:center">Acciones</th>
	</tr>
	<% @torneos.each do | torneo| %>

	<tr>
		<td>
			<%= torneo.nombre %>
		</td>
		<td>
			<%= torneo.cant_equipos %>
		</td>
		<td>
				
			Gan: <%= torneo.pts_ganados %> | 
			Empt: <%= torneo.pts_empatados %> | 
			Perd: <%= torneo.pts_perdidos  %>		
				   
		</td>

	<td style="text-align:center">
			<%= link_to 'Ver Fixture', url_for(:fecha, :misFechas, :torneo_id => torneo.id), :class => "btn btn-primary" %>
		</td>

		<td style="text-align:center">
			<%= link_to 'Ver Equipos', url_for(:equipo, :misEquipos, :torneo_id => torneo.id), :class => "btn btn-primary" %>
		</td>
		
			
	</tr>

  <% end %>

</table>
