<h1>Torneos</h1>

<table class="table table-bordered">
	<tr>
		<th>Nombre</th>
		<th>Cantidad de equipos</th>
		<th>Sistema de puntuacion</th>
	    <th>Acciones</th>
	</tr>
	<% @torneos.each do | torneo| %>

	<tr>
		<td>
			<%= torneo.nombre %>
		</td>
		<td>
			<%= torneo.cant_equipos %>
		</td>
		<td>
				
			Gan: <%= torneo.pts_ganados %> | 
			Empt: <%= torneo.pts_empatados %> | 
			Perd: <%= torneo.pts_perdidos  %>		
				   
		</td>

	<td>
			<%= link_to 'Ver Partidos', url_for(:partido, :misPartidos, :torneo_id => torneo.id), :class => "btn btn-primary" %>
		</td>

		<td>
			<%= link_to 'Ver Equipos', url_for(:equipo, :misEquipos, :torneo_id => torneo.id), :class => "btn btn-primary" %>
		</td>
		
			
	</tr>

  <% end %>

</table>
